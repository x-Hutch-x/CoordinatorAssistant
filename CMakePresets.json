{
  "version": 3,
  "cmakeMinimumRequired": { "major": 3, "minor": 21 },
  "configurePresets": [
    {
      "name": "x64-vs-vcpkg",
      "displayName": "VS 2022 + vcpkg (x64)",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "build",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "C:/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "CMAKE_CXX_STANDARD": "17"
      }
    }
  ],
  "buildPresets": [
    { "name": "debug",   "configurePreset": "x64-vs-vcpkg", "configuration": "Debug" },
    { "name": "release", "configurePreset": "x64-vs-vcpkg", "configuration": "Release" }
  ]
}
